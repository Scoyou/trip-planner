<h1><%= @address.id ? 'Edit Address' : 'Add Address' %></h1>
<hr />
<%= form_for [@location, @address] do |f| %>
  <%= f.label :street %>
  <%= f.text_field :street, required: true, autofocus: true %>
  <br />
  <%= f.label :city %>
  <%= f.text_field :city, required: true %>

  <%= f.label :state %>
  <%= f.text_field :state, required: true %>
  <br />

  <%= f.label :zip %>
  <%= f.number_field :zip, required: true %>
  <br />

  <%= f.submit %>
<% end %>