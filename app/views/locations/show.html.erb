<h1>Location</h1>

<table>
  <thead>
    <tr><th>Street</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
  </tr></thead>
  <tbody>
      <tr>
        <td data-label="Street"><%= @location.address.street %></td>
        <td data-label="City"><%= @location.address.city %></td>
        <td data-label="State"><%= @location.address.state %></td>
        <td data-label="Zip"><%= @location.address.zip %></td>
        <td><%= link_to "Edit", edit_location_address_path(@location.address) %></td>
        <td><%= link_to "Delete", location_path(@location.address), method: :delete%></td>
      </tr>
  </tbody>
</table>