<h1 class='trip-index-header'>Trips</h1>
<%= link_to "Log new trip", new_trip_path, class: 'btn btn-primary center' %>
<table class='trips-index-table table'>
  <thead>
    <tr>
      <td><Trip Name</td>
      <td>Trip Start</td>
      <td>Trip End</td>
      <td>Edit/Delete</td>
    </tr>
  </thead>
  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%=link_to trip.name, trip_path(trip) %></td>
        <td><%= trip.start_date %></td>
        <td><%= trip.end_date %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip), class: 'btn btn-warning' %> <%= link_to 'Delete', trip_path(trip), method: :delete, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
