<div class='container jumbotron'>
  <h1><%= @trip.id ? ('Edit Trip') : ('Create Trip') %></h1>
  <%= form_for @trip do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :start_date %>
    <%= f.text_field :start_date %>
    <%= f.label :end_date %>
    <%= f.text_field :end_date %>
    <%= f.submit %>
  <% end %>
</div>
